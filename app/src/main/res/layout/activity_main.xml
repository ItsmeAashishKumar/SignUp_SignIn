<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".MainActivity">


    <TextView
        android:layout_margin="35dp"
        android:id="@+id/textView"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:textStyle="bold"
        android:text="SignUp" />

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:layout_marginLeft="0dp"
        android:backgroundTint="#F9FCFE"
        app:cardCornerRadius="35dp">


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_margin="30dp"
            app:startIconDrawable="@drawable/ic_baseline_person_24"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:background="@drawable/bg2"
                android:id="@+id/Name"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:hint="Name" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                app:startIconDrawable="@drawable/ic_baseline_remove_red_eye_24"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:id="@+id/Password"
                    android:background="@drawable/bg2"
                    android:layout_height="wrap_content"
                    android:hint="Password" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    app:startIconDrawable="@drawable/ic_baseline_email_24"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:background="@drawable/bg2"
                        android:id="@+id/Email"
                        android:layout_height="wrap_content"
                        android:hint="Email" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="15dp"
                        app:startIconDrawable="@drawable/ic_baseline_arrow_forward_ios_24"
                        android:layout_height="match_parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:id="@+id/Eid"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg2"
                            android:hint="ID" />
                    </com.google.android.material.textfield.TextInputLayout>


                </com.google.android.material.textfield.TextInputLayout>
            </com.google.android.material.textfield.TextInputLayout>
        </com.google.android.material.textfield.TextInputLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_margin="35dp"
        android:id="@+id/sign"
        android:textSize="30sp"
        android:text="SIGN UP!"
        android:textStyle="bold"
        android:background="@drawable/bg2"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_gravity="center"
        android:textStyle="bold"
        android:id="@+id/signI"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="if already registered.click SIGN IN"
        />

</LinearLayout>